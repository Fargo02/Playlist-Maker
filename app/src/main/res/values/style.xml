<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="main_btn_light">
        <item name="android:layout_height">@dimen/clear_mark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/middle_mark</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_size_text</item>
        <item name="android:layout_weight">3</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/small_mark</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/middle_mark</item>
    </style>

    <style name="section_settings">
        <item name="android:paddingStart">@dimen/middle_mark</item>
        <item name="android:paddingTop">@dimen/padding_list</item>
        <item name="android:paddingBottom">@dimen/padding_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_section_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/middle_size_text</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="share_section_settings_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/share</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="support_section_settings_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/support</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="arrow_agreement_section_settings_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow_agreement</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="toolbar_settings">
        <item name="android:navigationIcon">@drawable/arrow</item>
        <item name="android:title">@string/settings</item>
        <item name="android:layout_marginBottom">@dimen/big_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>    