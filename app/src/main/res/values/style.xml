<?xml version="1.0" encoding="utf-8"?>
<resources >
    <style name="sectionSettings">
        <item name="android:paddingStart">@dimen/middle_mark</item>
        <item name="android:paddingTop">@dimen/padding_list</item>
        <item name="android:paddingBottom">@dimen/padding_list</item>
        <item name="android:paddingEnd">@dimen/mark_12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <style name="textSectionSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/mark_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="shareSectionSettingsImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/grey</item>
    </style>

    <style name="supportSectionSettingsImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/grey</item>
    </style>

    <style name="arrowAgreementSectionSettingsImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/grey</item>
    </style>

    <style name="toolbar">
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginBottom">@dimen/big_margin</item>
        <item name="android:contentInsetStartWithNavigation">@dimen/clear_mark</item>
        <item name="android:titleTextAppearance">@style/toolbar_text</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="toolbar_player" parent="toolbar">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:navigationIcon">@drawable/arrow</item>
    </style>

    <style name="toolbar_text" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/big_size_text</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="search_edit_text">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
    </style>
    
    <style name="out_of_size">
        <item name="android:textColor">@color/grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="placeHolderTextTrackList">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="track_information" parent="textColor">
        <item name="android:paddingTop">@dimen/mark_9dp</item>
        <item name="android:paddingBottom">@dimen/small_mark</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="mediaTabLayout">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="bottomNavigationBar">
        <item name="itemIconTint">@drawable/selector_bottom_nav_light</item>
        <item name="itemTextColor">@drawable/selector_bottom_nav_light</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="play_button">
        <item name="android:backgroundTint">@color/dark</item>
    </style>

    <style name="player_button">
        <item name="android:background">@drawable/ic_bgr_like_leght</item>
    </style>

    <style name="customOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="cursorColor">@color/blue</item>
    </style>

    <style name="toastBackground">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="toastTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialogView" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonStyle</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="rippleColor">@color/grey</item>
    </style>

</resources>    