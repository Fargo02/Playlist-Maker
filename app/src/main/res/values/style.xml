<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="mainBtnLight" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/middle_mark</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/big_size_text</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:foreground">@drawable/selector_for_main_btns</item>
        <item name="android:insetBottom">@dimen/clear_mark</item>
        <item name="android:insetTop">@dimen/clear_mark</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:drawable">@drawable/drawable_for_main_btns</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/small_mark</item>
        <item name="iconTint">@color/dark</item>
        <item name="cornerRadius">@dimen/middle_mark</item>
    </style>

    <style name="sectionSettings">
        <item name="android:paddingStart">@dimen/middle_mark</item>
        <item name="android:paddingTop">@dimen/padding_list</item>
        <item name="android:paddingBottom">@dimen/padding_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="textSectionSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/middle_size_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="shareSectionSettingsImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/grey</item>
    </style>

    <style name="supportSectionSettingsImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/grey</item>
    </style>

    <style name="arrowAgreementSectionSettingsImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/grey</item>
    </style>

    <style name="toolbar">
        <item name="android:textColor">@color/dark</item>
        <item name="android:navigationIcon">@drawable/arrow</item>
        <item name="android:layout_marginBottom">@dimen/big_margin</item>
        <item name="android:contentInsetStartWithNavigation">@dimen/clear_mark</item>
        <item name="android:titleTextAppearance">@style/toolbar_text</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="toolbar_text" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/big_size_text</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="search_edit_text">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
    </style>
    
    <style name="out_of_size">
        <item name="android:textColor">@color/grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="placeHolderTextTrackList">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="player_button">
        <item name="android:backgroundTint">@color/dark</item>
    </style>
</resources>    