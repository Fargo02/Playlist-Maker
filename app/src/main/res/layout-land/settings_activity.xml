<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/small_mark"
    android:id="@+id/settings">

    <Toolbar
        android:id="@+id/settingsBack"
        style="@style/toolbarSettings"
        android:foreground="?attr/selectableItemBackground">
    </Toolbar>
    <FrameLayout
        style="@style/sectionSettings">

        <Switch
            android:text="@string/dark_theme"
            android:textSize="@dimen/middle_size_text"
            android:id="@+id/themeSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>

    <FrameLayout
        style="@style/sectionSettings">
        <TextView
            style="@style/textSectionSettings"
            android:text="@string/share_the_app" />
        <ImageView
            style="@style/shareSectionSettingsImage" />
    </FrameLayout>

    <FrameLayout
        style="@style/sectionSettings">

        <TextView
            style="@style/textSectionSettings"
            android:text="@string/write_to_support" />
        <ImageView
            style="@style/supportSectionSettingsImage"/>

    </FrameLayout>
    <FrameLayout
        style="@style/sectionSettings">

        <TextView
            style="@style/textSectionSettings"
            android:text="@string/user_agreement" />
        <ImageView
            style="@style/arrowAgreementSectionSettingsImage"/>
    </FrameLayout>
</LinearLayout>