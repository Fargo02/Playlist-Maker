<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchBack"
        style="@style/toolbar"
        android:layout_marginBottom="@dimen/small_mark"
        android:title="@string/search" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/inputEditText"
            style="@style/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/middle_mark"
            android:layout_marginEnd="@dimen/middle_mark"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/search"
            android:textCursorDrawable="@drawable/cursor"
            android:drawablePadding="@dimen/icon_search_padding"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:lines="1"
            android:imeOptions="actionDone"
            android:singleLine="true"

            android:maxLength="30"
            android:padding="@dimen/edit_text_padding"
            android:textSize="@dimen/middle_size_text"
            android:importantForAutofill="no" />
        <ImageView
            android:id="@+id/clearIcon"
            style="@style/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/icon_close_margin"
            android:outlineAmbientShadowColor="@color/clear"
            android:paddingTop="@dimen/edit_text_padding"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            android:importantForAccessibility="no" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/placeholderSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_for_placeholder_102dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:importantForAccessibility="no">
        <ImageView
            android:id="@+id/imagePlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/nothing_found"/>
        <TextView
            android:id="@+id/textPlaceholder"
            style="@style/placeHolderTextTrackList"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/middle_mark"
            android:fontFamily="@font/ys_display_medium"
            android:textAlignment="center"
            android:textSize="@dimen/text_19sp"
            tools:text="@string/nothing_found"/>
        <Button
            android:id="@+id/updateSearch"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/big_margin"
            android:backgroundTint="@color/black"
            app:cornerRadius="@dimen/radius_btn_54dp"
            android:insetTop="@dimen/clear_mark"
            android:insetBottom="@dimen/clear_mark"

            android:text="@string/update"
            android:textSize="@dimen/text_size_14sp"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            style="@style/placeHolderTextTrackList"
            android:id="@+id/youSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_search"
            android:textSize="@dimen/text_19sp"
            android:fontFamily="@font/ys_display_medium"
            android:layout_gravity="center"
            android:visibility="gone"

            android:layout_marginTop="42dp"
            android:layout_marginBottom="@dimen/mark_4dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="@dimen/middle_mark"
            android:id="@+id/tracksList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/clear_mark"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/track_item"
            tools:itemCount="0" />
        <Button
            android:id="@+id/cleanHistory"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mark_36dp"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginBottom="@dimen/big_margin"
            android:backgroundTint="@color/black"
            app:cornerRadius="@dimen/radius_btn_54dp"
            android:layout_gravity="center"
            android:insetTop="@dimen/clear_mark"
            android:insetBottom="@dimen/clear_mark"
            android:visibility="gone"

            android:text="@string/clean_history"
            android:textSize="@dimen/text_size_14sp"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>