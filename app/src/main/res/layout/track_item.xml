<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/small_mark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/itemTrackCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_mark"
        android:layout_marginStart="@dimen/mark_13dp"
        android:src="@drawable/placeholder"/>
    <FrameLayout
        android:layout_weight="1"
        android:paddingTop="@dimen/mark_6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Smells Like Teen Spirit"
            android:textSize="@dimen/middle_size_text"
            android:textColor="@color/black"
            android:fontFamily="@font/ys_display_regular"
            android:ellipsize="end"
            android:maxLines="1"/>
        <LinearLayout
            android:layout_marginTop="@dimen/mark_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/out_of_size"
                android:id="@+id/itemArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nirvana"
                android:textSize="@dimen/small_size_text_11"
                android:fontFamily="@font/ys_display_regular"/>
            <ImageView
                style="@style/point_of_separation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point"/>
            <TextView
                style="@style/out_of_size"
                android:id="@+id/itemTrackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5:01"
                android:textSize="@dimen/small_size_text_11"
                android:fontFamily="@font/ys_display_regular"/>
        </LinearLayout>
    </FrameLayout>
    <ImageView
        style="@style/arrowAgreementSectionSettingsImage"
        android:paddingEnd="@dimen/mark_12dp"
        android:paddingTop="@dimen/edit_text_padding"
        android:paddingBottom="@dimen/mark_6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_agreement"
        tools:ignore="RtlSymmetry" />
</LinearLayout>