<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="196dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/mark_16dp"
    android:layout_marginHorizontal="@dimen/mark_8dp">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="160dp"
        android:layout_height="160dp"
        tools:src="@drawable/playlist_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/name"/>
    <TextView
        android:id="@+id/name"
        style="@style/textColor"
        android:layout_width="@dimen/clear_mark"
        android:layout_height="wrap_content"
        tools:text="Best soooooongs 2024"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/mark_16sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cover"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/count"
        style="@style/textColor"
        android:layout_width="@dimen/clear_mark"
        android:layout_height="wrap_content"
        tools:text="150 треков"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/mark_14sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>