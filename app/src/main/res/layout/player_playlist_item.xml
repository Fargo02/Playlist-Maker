<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/mark_8dp"
    android:paddingBottom="@dimen/mark_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mark_8dp"
        android:layout_marginStart="@dimen/mark_13dp"
        android:src="@drawable/track_placeholder"/>
    <FrameLayout
        android:layout_weight="1"
        android:paddingTop="@dimen/mark_6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Smells Like Teen Spirit"
            android:textSize="@dimen/text_mark_16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ys_display_regular"
            android:ellipsize="end"
            android:maxLines="1"/>
        <LinearLayout
            android:layout_marginTop="@dimen/mark_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/count"
                style="@style/out_of_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="150"
                android:textSize="@dimen/text_mark_11sp"
                android:fontFamily="@font/ys_display_regular"/>
            <TextView
                style="@style/out_of_size"
                android:id="@+id/tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="треков"
                android:textSize="@dimen/text_mark_11sp"
                android:fontFamily="@font/ys_display_regular"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>